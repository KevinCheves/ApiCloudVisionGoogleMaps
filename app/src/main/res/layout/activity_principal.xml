<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imagentexto"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/paisejemplo"/>

    <Button
        android:id="@+id/seleccionarimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagentexto"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="31dp"
        android:backgroundTint="#0669b2"
        android:clickable="true"
        android:text="Seleccionar imagen"
        android:textColor="@color/white"
        android:textSize="14sp" />
    <Button
        android:id="@+id/btnprocesar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seleccionarimg"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="31dp"
        android:backgroundTint="#0669b2"
        android:clickable="true"
        android:text="Procesar"
        android:textColor="@color/white"
        android:textSize="14sp" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt1"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_below="@+id/seleccionarimg"
        />
</RelativeLayout>